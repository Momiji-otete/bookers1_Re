<h2>New book</h2>

<%= render "layouts/errors", book: @book %>

<%= form_with model: book do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.submit "Create Book" %>
  </div>
<% end %>
